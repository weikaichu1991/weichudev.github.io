{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }
  ],
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "/api/comments/**",
        "function": {
          "functionId": "api",
          "region": "europe-west1"
        }
      }
    ],
    "github": {
      "repo": "weikaichu1991/weichudev.github.io",
      "branch": "main"
    }
  },
  "emulators": {
    "functions": {
      "port": 5000
    },
    "hosting": {
      "port": 5001
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "singleProjectMode": true
  }
}
